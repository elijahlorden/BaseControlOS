local Formatters = {}

Formatters.formatError = function(str)
	return "&#fFF0000&#"..str.."&#fFFFFFF&#"
end

Formatters.formatSuccess = function(str)
	return "&#f00FF00&#"..str.."&#fFFFFFF&#"
end

Formatters.formatNotification = function(str)
	return "&#fFFFF00&#"..str.."&#fFFFFFF&#"
end












return Formatters